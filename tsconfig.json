{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "outDir": "./build",
    "sourceMap": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@employeesListComponents/*": ["src/features/EmployeesList/components/*"],
      "@public/*": ["public/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
